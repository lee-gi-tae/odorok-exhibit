# EditorConfig 기본 설정
root = true

# 모든 파일에 공통 적용
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JSON, YAML 파일은 2칸 들여쓰기 (명시적)
[*.{json,yml,yaml}]
indent_size = 2

# Markdown 파일은 공백 제거 안 함 (리드미 편집 시 중요)
[*.md]
trim_trailing_whitespace = false

# Windows 배치 파일은 CRLF 줄바꿈 유지
[*.{bat,cmd}]
end_of_line = crlf
